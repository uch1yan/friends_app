<div class="wrapper">
  <h1>詳細ページ</h1>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>コメント:</strong>
    <%= @picture.content %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag @picture.image.url %>
  </p>

  <p><%= link_to "投稿一覧に戻る", pictures_path %></p>
  <% if @picture.user == current_user %>
  <p><%= link_to '編集する', edit_picture_path(@picture) %></p>
  <% end %>
</div>
